@model Ator

@{ 
    ViewData["Title"] = "Adicionar novo ator";
}

<h1>Criar novo ator</h1>

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Criar novo ator</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Criar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label></label>
                        <input asp-for="Nome" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label></label>
                        <input asp-for="Bio" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoPerfilURL" class="control-label></label>
                        <input asp-for="FotoPerfilURL" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-outline-warning float-right"/>
                        <a class="btn btn-outline-info" </a>
                    </div>
                </form>

            </div>
        </div>

    </div>

</div>